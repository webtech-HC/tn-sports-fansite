{
"$schema": "https://json-schema.org/draft/2020-12/schema",
"$id": "game.schema.json",
"title": "Game",
"type": "object",
"additionalProperties": false,
"required": ["date", "opponent", "home"],
"properties": {
"date": { "type": "string", "format": "date-time", "description": "Kickoff in ISO8601 with timezone" },
"opponent": { "type": "string", "minLength": 1 },
"home": { "type": "boolean" },
"tv": { "type": ["string", "null"], "default": null },
"result": { "type": ["string", "null"], "default": null, "description": "Score string like '31-24' or null" },
"venue": { "type": ["string", "null"], "default": null }
}
}
